<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.enset.controllers.MainController"
    style="-fx-background-color: #ecf0f1; -fx-padding: 10;">

    <!-- User Information Section -->
    <HBox spacing="10" alignment="CENTER_LEFT"
        style="-fx-background-color: #3498db; -fx-padding: 10;">
        <Label text="Welcome, " style="-fx-text-fill: white; -fx-font-size: 16;" />
        <Label fx:id="userNameLabel"
            style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" />
        <HBox HBox.hgrow="ALWAYS" />
        <Button text="Logout" onAction="#handleLogout"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 12; -fx-cursor: hand;" />
    </HBox>

    <!-- TabPane for Products and Transactions -->
    <TabPane fx:id="tabPane"
        style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 2; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);"
        VBox.vgrow="ALWAYS">
        <Tab text="Products" closable="false">
            <VBox spacing="10" style="-fx-padding: 10;">
                <!-- TableView for Products -->
                <TableView fx:id="productTable"
                    style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 1;"
                    VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="nameColumn" text="Name" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="quantityColumn" text="Quantity"
                            style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="priceColumn" text="Price" style="-fx-alignment: CENTER;" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <!-- Input Fields for Products -->
                <HBox spacing="10" style="-fx-padding: 10;">
                    <TextField fx:id="nameField" promptText="Product Name"
                        style="-fx-font-size: 12; -fx-background-color: #ecf0f1; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-text-fill: #2c3e50;"
                        HBox.hgrow="ALWAYS" />
                    <TextField fx:id="quantityField" promptText="Quantity"
                        style="-fx-font-size: 12; -fx-background-color: #ecf0f1; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-text-fill: #2c3e50;"
                        HBox.hgrow="ALWAYS" />
                    <TextField fx:id="priceField" promptText="Price"
                        style="-fx-font-size: 12; -fx-background-color: #ecf0f1; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-text-fill: #2c3e50;"
                        HBox.hgrow="ALWAYS" />
                </HBox>

                <!-- Buttons for Products -->
                <HBox spacing="10" style="-fx-padding: 10;">
                    <Button text="Add Product" onAction="#handleAddProduct"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 12; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 0); -fx-background-radius: 5;" />
                    <Button text="Update Product" onAction="#handleUpdateProduct"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 12; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 0); -fx-background-radius: 5;" />
                    <Button text="Delete Product" onAction="#handleDeleteProduct"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 12; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 0); -fx-background-radius: 5;" />
                </HBox>
            </VBox>
        </Tab>

        <!-- Transactions Tab -->
        <Tab text="Transactions" closable="false">
            <VBox spacing="10" style="-fx-padding: 10;">
                <!-- TableView for Transactions -->
                <TableView fx:id="transactionTable"
                    style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 1;"
                    VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="transactionIdColumn" text="ID"
                            style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="productNameColumn" text="Product Name"
                            style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="transactionQuantityColumn" text="Quantity"
                            style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="actionColumn" text="Action"
                            style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="timestampColumn" text="Timestamp"
                            style="-fx-alignment: CENTER;" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </Tab>
    </TabPane>
</VBox>