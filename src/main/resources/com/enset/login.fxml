<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.enset.controllers.AuthController"
    style="-fx-background-color: linear-gradient(to bottom right, #3498db, #2c3e50); -fx-padding: 50;">
    <!-- Login Form -->
    <VBox spacing="15"
        style="-fx-background-color: white; -fx-border-color: #2980b9; -fx-border-width: 2; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0); -fx-background-radius: 5; -fx-border-radius: 5;">
        <Label text="Login"
            style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(one-pass-box, #3498db, 5, 0.2, 0, 1);" />
        <TextField fx:id="usernameField" promptText="Username"
            style="-fx-font-size: 14; -fx-padding: 10; -fx-background-color: #ecf0f1; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-text-fill: #2c3e50;" />
        <PasswordField fx:id="passwordField" promptText="Password"
            style="-fx-font-size: 14; -fx-padding: 10; -fx-background-color: #ecf0f1; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0; -fx-text-fill: #2c3e50;" />
        <Button text="Login" onAction="#handleLogin"
            style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 0); -fx-background-radius: 5;" />
    </VBox>
</VBox>